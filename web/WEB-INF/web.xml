<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--欢迎页面的设置-->
    <welcome-file-list>
        <welcome-file>isLogin</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>isLogin</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.CheckLoginStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isLogin</servlet-name>
        <url-pattern>/isLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>select</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.SelectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>select</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addsubmit</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.AddSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addsubmit</servlet-name>
        <url-pattern>/addsubmit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteE</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.deleteEServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteE</servlet-name>
        <url-pattern>/deleteE</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.deleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employee</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.employeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employee</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addSP</servlet-name>
        <servlet-class>com.songxuguang.javaweb.servlet.addSPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSP</servlet-name>
        <url-pattern>/addSP</url-pattern>
    </servlet-mapping>
</web-app>